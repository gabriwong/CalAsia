<form style="background:white;color:#777">
  <div class="row">
    <h2 class="col-md-12 text-center">
      Event
    </h2>
  </div>
  <div style="padding:10px">
    <h4> Type of Event: </h4>
    <div class="radio">
      <label>
        <input type="radio" name="eventType" id="internal" value="internal" checked>
        Internal
      </label>
    </div>
    <div class="radio">
      <label>
        <input type="radio" name="eventType" id="external" value="external">
        External
      </label>
    </div>
      External Link: 
      <input id="externalLink" class="form-control" placeholder="www.example.com/register" ng-model="form.externalLink">
    <h4> Event Name:</h4>
    <input class="form-control" ng-model="form.name" style="width:100%" placeholder="Event Name">
  </div>
  <div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Date:</h4>
      <input class="form-control" type="date" style="width:100%" ng-model="form.date.full">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Time:</h4>
      <input class="form-control" type="time" style="width:100%" ng-model="form.eventTime.full">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Location:</h4>
      <input class="form-control" style="width:100%" placeholder="Address" ng-model="form.location">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Price: <span ng-show="form.price">$[[form.price]]</span> </h4>
      <input class="form-control" style="width:100%" placeholder="0" type="number" ng-model="form.price">
    </div>
     <div style="display:inline-block; padding:10px; width:33%">
      <h4> Member Price: <span ng-show="form.memberPrice">$[[form.memberPrice]]</span> </h4>
      <input class="form-control" style="width:100%" placeholder="0" type="number" ng-model="form.memberPrice">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Registration Deadline:</h4>
      <input id="test" class="form-control" type="date" style="width:100%" ng-model="form.registration.date.full">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Registration URL:</h4>
      <input class="form-control" style="width:100%" placeholder="www.example.com" ng-model="form.registration.url">
    </div>
    <div style="display:inline-block; padding:10px; width:33%">
      <h4> Capacity: [[form.capacity]]</h4>
      <input class="form-control" type="number" style="width:100%" placeholder="0" ng-model="form.capacity">
    </div>
  </div>
  <div style="padding:10px">
    <h4> Description:</h4>
    <div class="btn-toolbar" data-role="editor-toolbar" data-target="#editor">
      <div class="modal fade" id="addLink">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <div class="form-group row-fluid">
                <button class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Link</h4>
              </div>
            </div><!-- end modal header-->

            <div class="modal-body">
              <div class="checkbox">
                <label><input type="checkbox" checked="" id="linkTarget"> Open in new window</label>
              </div>
              <label>URL</label>
              <input class="form-control span12" placeholder="URL" type="text" data-edit="createLink"></input>
              <div class="panel panel-default" style="margin-top:20px">
                <div class="panel-heading">For update & event modals:</div>
                <div class="panel-body">
                  <strong>Format: </strong><br>
                    [type]: [title]<br><br>
                  <strong>Example: </strong><br>
                    update: update title<br>
                    event: event title<br><br>
                  <i>*Titles must be exactly the same as exsiting ones</i>
                </div>
              </div>
            </div><!-- end modal body-->

            <div class="modal-footer">
              <button class="btn" type="button" id="addLinkBtn"onclick="$('#addLink').modal('hide')">Add</button>
              <button class="btn btn-primary" data-dismiss="modal" type="button">Close</button>
            </div><!-- end modal-footer -->
          </div><!-- end modal content -->
        </div><!-- end modal dialog --> 
      </div><!--end modal fade --> 
      <div class="btn-group">
        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="Font" data-original-title="Font"><i class="glyphicon glyphicon-font"></i><b class="caret"></b></a>
          <ul class="dropdown-menu">
          <li><a data-edit="fontName Serif" style="font-family:'Serif'">Serif</a></li><li><a data-edit="fontName Sans" style="font-family:'Sans'">Sans</a></li><li><a data-edit="fontName Arial" style="font-family:'Arial'">Arial</a></li><li><a data-edit="fontName Arial Black" style="font-family:'Arial Black'">Arial Black</a></li><li><a data-edit="fontName Courier" style="font-family:'Courier'">Courier</a></li><li><a data-edit="fontName Courier New" style="font-family:'Courier New'">Courier New</a></li><li><a data-edit="fontName Comic Sans MS" style="font-family:'Comic Sans MS'">Comic Sans MS</a></li><li><a data-edit="fontName Helvetica" style="font-family:'Helvetica'">Helvetica</a></li><li><a data-edit="fontName Impact" style="font-family:'Impact'">Impact</a></li><li><a data-edit="fontName Lucida Grande" style="font-family:'Lucida Grande'">Lucida Grande</a></li><li><a data-edit="fontName Lucida Sans" style="font-family:'Lucida Sans'">Lucida Sans</a></li><li><a data-edit="fontName Tahoma" style="font-family:'Tahoma'">Tahoma</a></li><li><a data-edit="fontName Times" style="font-family:'Times'">Times</a></li><li><a data-edit="fontName Times New Roman" style="font-family:'Times New Roman'">Times New Roman</a></li><li><a data-edit="fontName Verdana" style="font-family:'Verdana'">Verdana</a></li></ul>
      </div>
      <div class="btn-group">
        <a class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="Font Size" data-original-title="Font Size"><i class="glyphicon glyphicon-text-height"></i>&nbsp;<b class="caret"></b></a>
          <ul class="dropdown-menu">
          <li><a data-edit="fontSize 5"><font size="5">Huge</font></a></li>
          <li><a data-edit="fontSize 3"><font size="3">Normal</font></a></li>
          <li><a data-edit="fontSize 1"><font size="1">Small</font></a></li>
          </ul>
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="bold" title="Bold (Ctrl/Cmd+B)" data-original-title="Bold (Ctrl/Cmd+B)"><i class="glyphicon glyphicon-bold"></i></a>
        <a class="btn btn-default" data-edit="italic" title="Italic (Ctrl/Cmd+I)" data-original-title="Italic (Ctrl/Cmd+I)"><i class="glyphicon glyphicon-italic"></i></a>
        <a class="btn btn-default" data-edit="underline" title="Underline (Ctrl/Cmd+U)" data-original-title="Underline (Ctrl/Cmd+U)"><i class="glyphicon glyphicon-text-width"></i></a>
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="insertunorderedlist" title="Bullet List" data-original-title="Bullet list"><i class="glyphicon glyphicon-list"></i></a>
        <a class="btn btn-default" data-edit="insertorderedlist" title="Number List" data-original-title="Number list"><i class="glyphicon glyphicon-list-alt"></i></a>
        <a class="btn btn-default" data-edit="outdent" title="Reduce indent (Shift+Tab)" data-original-title="Reduce indent (Shift+Tab)"><i class="glyphicon glyphicon-indent-left"></i></a>
        <a class="btn btn-default" data-edit="indent" title="Indent (Tab)" data-original-title="Indent (Tab)"><i class="glyphicon glyphicon-indent-right"></i></a>
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="justifyleft" title="Align Left (Ctrl/Cmd+L)" data-original-title="Align Left (Ctrl/Cmd+L)"><i class="glyphicon glyphicon-align-left"></i></a>
        <a class="btn btn-default" data-edit="justifycenter" title="Center (Ctrl/Cmd+E)" data-original-title="Center (Ctrl/Cmd+E)"><i class="glyphicon glyphicon-align-center"></i></a>
        <a class="btn btn-default" data-edit="justifyright" title="Align Right (Ctrl/Cmd+R)" data-original-title="Align Right (Ctrl/Cmd+R)"><i class="glyphicon glyphicon-align-right"></i></a>
        <a class="btn btn-default" data-edit="justifyfull" title="Justify (Ctrl/Cmd+J)" data-original-title="Justify (Ctrl/Cmd+J)"><i class="glyphicon glyphicon-align-justify"></i></a>
      </div>
      <div class="btn-group">
        <a class="btn btn-default" title="Insert Link" data-original-title="Hyperlink" onclick="$('#addLink').modal('show')"><i class="glyphicon glyphicon-link"></i></a>
        <a class="btn btn-default" data-edit="unlink" title="Remove Link" data-original-title="Remove Hyperlink"><i class="glyphicon glyphicon-remove"></i></a>
      </div>

      <div class="btn-group">
        <a class="btn btn-default" title="Insert picture (or just drag &amp; drop)" id="pictureBtn" data-original-title="Insert picture (or just drag &amp; drop)"><i class="glyphicon glyphicon-picture"></i></a>
        <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" style="opacity: 0; position: absolute; top: 0px; left: 0px; width: 37px; height: 30px;">
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="undo" title="Undo (Ctrl/Cmd+Z)" data-original-title="Undo (Ctrl/Cmd+Z)"><i class="glyphicon glyphicon-backward"></i></a>
        <a class="btn btn-default" data-edit="redo" title="Redo (Ctrl/Cmd+Y)" data-original-title="Redo (Ctrl/Cmd+Y)"><i class="glyphicon glyphicon-forward"></i></a>
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="clear" title="Clear" onclick="$('#editor').empty()">CLEAR</a>
      </div>
    </div>
    <div id="editor" class="form-control" style="width:100%; height:20em"></div>
    <h4> Sponsors(if more than 1, separate with comma ",")</h4>
    <input class="form-control" placeholder="Sponsors" ng-model="form.sponsors">
    <h4>Banner:</h4>
    <div class="btn-toolbar" data-role="editor-toolbar2" data-target="#editor2">
      <div class="btn-group">
        <a class="btn btn-default" title="Insert picture (or just drag &amp; drop)" id="pictureBtn" data-original-title="Insert picture (or just drag &amp; drop)"><i class="glyphicon glyphicon-picture"></i></a>
        <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" style="opacity: 0; position: absolute; top: 0px; left: 0px; width: 37px; height: 30px;">
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="clear" title="Clear" onclick="$('#editor2').empty()">CLEAR</a>
      </div>
    </div>
    <div id="editor2" class="form-control" style="width:100%; height:10em"></div>
    <h4>Images:</h4>
    <div class="btn-toolbar" data-role="editor-toolbar3" data-target="#editor3">
      <div class="btn-group">
        <a class="btn btn-default" title="Insert picture (or just drag &amp; drop)" id="pictureBtn" data-original-title="Insert picture (or just drag &amp; drop)"><i class="glyphicon glyphicon-picture"></i></a>
        <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" style="opacity: 0; position: absolute; top: 0px; left: 0px; width: 37px; height: 30px;">
      </div>
      <div class="btn-group">
        <a class="btn btn-default" data-edit="clear" title="Clear" onclick="$('#editor3').empty()">CLEAR</a>
      </div>
    </div>
    <div id="editor3" class="form-control" style="width:100%; height:10em"></div>
    <div style="margin-top:1em" class="text-center">
      <a style="display:inline-block">
        <button class="btn btn-primary" ng-click="submitEvent()">Submit Event</button>
      </a>
    </div>
  </div>
</form>