<div>
	<h1 style="padding-top:20px; text-align:center;">
		Cal-Asia Board
	</h1>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="page-header">
				<h2>Officers</h2>
			</div>
			<div class="text-center" data-loading>
				<img src="img/Cal-Asia-Loading-Icon.gif">
			</div>
			<div class="col-xs-6 col-sm-4 col-md-3 [[member._id]]" ng-repeat="member in officers | orderBy:'position'" style="padding-left:10px;padding-right:10px">
				<div style="padding:10px;margin-top:10px;margin-bottom:10px">
					<div style="width:100%;padding-bottom:100%;position:relative">
						<a style="cursor:pointer" ng-click="showModal([[member._id]])">
							<div class="boardThumbnail" style="background:url([[member.image]]) center center;background-size:cover;width:100%;height:100%;position:absolute;top:0;left:0;border-radius:100px;border:solid 10px #537368"></div>
						</a>
					</div>
					<div style="height:100px;text-align:center">
						<h5 style="cursor:pointer" ng-click="showModal([[member._id]])"><strong>[[member.name]]</strong></h5>
						<h5><strong>[[member.position]]</strong></h5>
					</div>
				</div>
			</div>
			<div class="modal fade" id="[[member._id]]" ng-repeat="member in officers | orderBy:'name'">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header text-center">
							<button class="close" data-dismiss="modal">&times;</button>
							<div class="row">
								<div class="col-md-4">
									<div style="width:100%;padding-bottom:100%;position:relative">
										<div class="boardThumbnail" style="background:url([[member.image]]) center center;background-size:cover;width:100%;height:100%;position:absolute;top:0;left:0;border-radius:100px;border:solid 10px #537368"></div>
									</div>
								</div>
								<div class="col-md-8">
									<h3><strong>[[member.name]]</strong></h3>
									<h5><strong>[[member.position]]</strong></h5>
									<h5><i>[[member.company.position]]</i><br>
									<span ng-show="member.company.website"><a href="[[member.company.website]]" target="_blank">[[member.company.name]]</a></span><span ng-hide="member.company.website">[[member.company.name]]</span></h5>
								</div>
							</div>
						</div><!-- end modal header-->

						<div class="modal-body">
							<p ng-bind-html="event.bio"></p> 
						</div><!-- end modal body-->

						<div class="modal-footer">
							<div ng-if="member.type" style="display:inline-block" class="pull-left">
								<h5 ng-repeat="title in member.type track by $index"class="label label-default" style="margin-right:5px">Cal-Asia [[title]]</h5>
							</div>
							<button class="btn btn-primary" data-dismiss="modal" type="button">Close</button>
						</div><!-- end modal-footer -->
					</div><!-- end modal content -->
				</div><!-- end modal dialog --> 
			</div><!--end modal fade --> 
		</div>
	</div>
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="page-header">
				<h2>Directors</h2>
			</div>
			<div class="text-center" data-loading>
				<img src="img/Cal-Asia-Loading-Icon.gif">
			</div>
			<div class="col-xs-6 col-sm-4 col-md-3 [[member._id]]" ng-repeat="member in directors | orderBy:'name'" style="padding-left:10px;padding-right:10px">
				<div style="padding:10px;margin-top:10px;margin-bottom:10px">
					<div style="width:100%;padding-bottom:100%;position:relative">
						<a style="cursor:pointer" ng-click="showModal([[member._id]])">
							<div class="boardThumbnail" style="background:url([[member.image]]) center center;background-size:cover;width:100%;height:100%;position:absolute;top:0;left:0;border-radius:100px;border:solid 10px #537368"></div>
						</a>
					</div>
					<div style="height:100px;text-align:center">
						<h5 style="cursor:pointer" ng-click="showModal([[member._id]])"><strong>[[member.name]]</strong></h5>
						<h5><strong>[[member.position]]</strong></h5>
					</div>
				</div>
			</div>
			<div class="modal fade" id="[[member._id]]" ng-repeat="member in directors | orderBy:'name'">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header text-center">
							<button class="close" data-dismiss="modal">&times;</button>
							<div class="row">
								<div class="col-md-4">
									<div style="width:100%;padding-bottom:100%;position:relative">
										<div class="boardThumbnail" style="background:url([[member.image]]) center center;background-size:cover;width:100%;height:100%;position:absolute;top:0;left:0;border-radius:100px;border:solid 10px #537368"></div>
									</div>
								</div>
								<div class="col-md-8">
									<h3><strong>[[member.name]]</strong></h3>
									<h4><strong>[[member.position]]</strong></h4>
									<h5><i>[[member.company.position]]</i><br>
									<span ng-show="member.company.website"><a href="[[member.company.website]]" target="_blank">[[member.company.name]]</a></span><span ng-hide="member.company.website">[[member.company.name]]</span></h5>
								</div>
							</div>
						</div><!-- end modal header-->

						<div class="modal-body">
							<p ng-bind-html="member.bio"></p> 
						</div><!-- end modal body-->

						<div class="modal-footer">
							<div ng-if="member.type" style="display:inline-block" class="pull-left">
								<h5 ng-repeat="title in member.type track by $index"class="label label-default" style="margin-right:5px">Cal-Asia [[title]]</h5>
							</div>
							<button class="btn btn-primary" data-dismiss="modal" type="button">Close</button>
						</div><!-- end modal-footer -->
					</div><!-- end modal content -->
				</div><!-- end modal dialog --> 
			</div><!--end modal fade --> 
		</div>
	</div>
</div>